package br.com.liberato;

import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 *
 * @author Tati
 */

public class Gravar extends HttpServlet {
    @Override
    public void doGet(HttpServletRequest request,
            HttpServletResponse response)
            throws IOException {
        PrintWriter out = response.getWriter();
        response.setContentType("text/html");
        String nome, sobreNome;
        nome = request.getParameter("nome");
        sobreNome = request.getParameter("sobrenome");
        Dados novo = new Dados();
        novo.setNome(nome);
        novo.setSobreNome(sobreNome);
        Dados.lista.add(novo);

        out.println("<h1>Bem-vindo " + nome + " " + sobreNome
                + "</h1>");
        out.close();
    }

    public void doPost(HttpServletRequest request,
            HttpServletResponse response)
            throws IOException {
        doGet(request, response);
    }
} 
E depois bd corrigir importaÃ§Ãµes.


Listar colocar bootstrap
package br.com.liberato;

import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 *
 * @author Tati
 */

public class Listar extends HttpServlet {
     @Override
    public void doGet(HttpServletRequest request,
            HttpServletResponse response)
            throws IOException {
        PrintWriter out = response.getWriter();
        response.setContentType("text/html");
        out.print("<link rel=\"stylesheet\" href=\"https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css\" integrity=\"sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO\" crossorigin=\"anonymous\">");
        out.print("<table class=\"table table-hover\">");
        out.print("<tr><th>Nome</th>");
        out.print("<th>Sobrenome</th></tr>");
                
        for(Dados novo:Dados.lista){
            out.print("<tr><td>"+novo.getNome()+ "</td> " 
                    +"<td>" + novo.getSobreNome()+"</td></tr>");
           
        }
        out.print("</table>");
        out.print("<br><br><a href='form.html'>Voltar</a>");
        out.close();
    }
    public void doPost(HttpServletRequest request,
            HttpServletResponse response)
            throws IOException {
        doGet(request,response);
    }
}
WEB-INF â†’ web.xml â†’ <?xml version="1.0" encoding="UTF-8"?>, colocar abaixo 
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
<servlet>
<servlet-name>Gravar</servlet-name>
<servlet-class>br.com.liberato.Gravar</servlet-class>
</servlet>
<servlet>
<servlet-name>Listar</servlet-name>
<servlet-class>br.com.liberato.Listar</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Gravar</servlet-name>
<url-pattern>/gravar</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>Listar</servlet-name>
<url-pattern>/listar</url-pattern>
</servlet-mapping>
<session-config>
<session-timeout> 30 </session-timeout>
</session-config>
<welcome-file-list>
<welcome-file>form.html</welcome-file>
</welcome-file-list>
</web-app>




