grava.jsp
<%-- 
    Document   : grava
    Created on : 17/10/2025, 10:37:08
    Author     : Tati
--%>

<%@page contentType="text/html" pageEncoding="WINDOWS-1252"%>
<jsp:useBean id="usuario" class="br.com.liberato.DadosUsuario"
             scope="session"/>
<jsp:setProperty name="usuario" property="*"/>

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=WINDOWS- 1252">
        <title>Confirmação</title>
    </head>
    <body>
        <h1>Dados Incluídos com Sucesso !!!</h1>
        <br><br><br>
        <a href="mostra.jsp">Mostrar Dados</a>
    </body>
</html>

mostra.jsp
<%-- 
    Document   : mostra
    Created on : 17/10/2025, 10:54:25
    Author     : Tati
--%>

<jsp:useBean id="usuario" class="br.com.liberato.DadosUsuario"
             scope="session"/>
<%@page contentType="text/html" pageEncoding="WINDOWS-1252"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=WINDOWS-1252">
        <title>Mostra os Dados</title>
    </head>
    <body>
        Você entrou<br>
        Nome: <%= usuario.getNome()%><br>
        E-mail: <%= usuario.getEmail()%><br>
        Idade: <%= usuario.getIdade()%><br>
        
        <!--Outra forma de pegar os dados-->
        Nome: <jsp:getProperty name="usuario" property="nome"/><br>
        E-mail: <jsp:getProperty name="usuario" property="email"/><br>
        Idade: <jsp:getProperty name="usuario" property="idade"/><br>
    </body>
</html>


