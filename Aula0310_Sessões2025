<%@page import="java.util.Date"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>JSP Page</title>
    </head>
    <body>
        <%
            out.println("Dados da Sessão <br>");
            out.println("Identificador: " + session.getId() + "<br>");
            out.println("Data Criação: " + 
                    new Date(session.getCreationTime()) + "<br>");
            out.println("Último Acesso: " +
                    new Date(session.getLastAccessedTime()) + "<br>");
            out.println("Tempo Máximo de Inatividade : " 
                    + session.getMaxInactiveInterval()
                    + " segundos =  " + 
                    (session.getMaxInactiveInterval() / 60)
                    + " minutos <br>");
        %>
        <br><br>
        <!--Outra maneira-->
        Dados da Sessão <br>
        Identificador: <%=session.getId()%><br>
        Data Criação: <%=new Date(session.getCreationTime())%> <br>
        Último Acesso: <%=new Date(session.getLastAccessedTime())%><br>
        Tempo Máximo de Inatividade : <%=session.getMaxInactiveInterval()%>
        segundos =  <%=(session.getMaxInactiveInterval() / 60)%> minutos <br>
    </body>
</html>


